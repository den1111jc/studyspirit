<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cross"
        tools:context=".MainActivity">

        <TextView

            android:id="@+id/zagol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:fontFamily="@font/aote"
            android:textSize="30sp"
            android:layout_marginBottom="25dp"
            android:text="@string/zagolovok"
            app:layout_constraintTop_toTopOf="parent"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/manualbut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/backbut"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/atrom"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="19sp"
            android:layout_marginBottom="25dp"
            app:layout_constraintTop_toBottomOf="@id/zagol"
            android:text="@string/textmanual"
            android:gravity="center_horizontal"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/aboutchrist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/manualbut"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/atrom"
            android:padding="10dp"
            android:background="@drawable/backbut"
            android:textStyle="bold"
            android:elevation="8dp"
            android:textSize="19sp"
            android:text="@string/zerozn"
            android:gravity="center_horizontal"/>





        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/catalogChrist"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/aboutchrist"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_horizontal"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

